<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginLeft="150dp"
        android:background="@drawable/de_app"></ImageView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bienvenue dans le lancé de DÉ\n Sélectionner votre face :"
        android:layout_marginBottom="20sp"
        android:textSize="25sp"
        android:textAlignment="center"
        android:layout_marginTop="20sp"
        android:textStyle="bold"
        android:textColor="@color/white"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp">
    <CheckBox
        android:id="@+id/face4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="4"></CheckBox>

    <CheckBox
        android:id="@+id/face6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="6"></CheckBox>

        <CheckBox
            android:id="@+id/face8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="8"></CheckBox>

        <CheckBox
            android:id="@+id/face10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="10"></CheckBox>

        <CheckBox
            android:id="@+id/face12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="12"></CheckBox>

        <CheckBox
            android:id="@+id/face20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="20"></CheckBox></LinearLayout>




    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:text="Sélectionner le nombre de dé à lancer :"></TextView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp">

    <CheckBox
        android:id="@+id/nb1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1"></CheckBox>

    <CheckBox
        android:id="@+id/nb2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2"></CheckBox>

    <CheckBox
        android:id="@+id/nb3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="3"></CheckBox>

    <CheckBox
        android:id="@+id/nb4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="4"></CheckBox></LinearLayout>

    <Button
        android:id="@+id/resultat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LANCER"
        android:textSize="20dp"
        android:layout_margin="20dp"
        android:onClick="resultat"></Button>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Résultat :"
        android:textSize="25sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/white"></TextView>

    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:textAlignment="center"
        android:layout_marginTop="10sp"
        android:textStyle="bold"
        android:textColor="@color/white"></TextView>

    <TextView
        android:id="@+id/result2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:textAlignment="center"
        android:layout_marginTop="10sp"
        android:textStyle="bold"
        android:textColor="@color/white"></TextView>

    <TextView
        android:id="@+id/result3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:textAlignment="center"
        android:layout_marginTop="10sp"
        android:textStyle="bold"
        android:textColor="@color/white"></TextView>

    <TextView
        android:id="@+id/result4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:textAlignment="center"
        android:layout_marginTop="10sp"
        android:textStyle="bold"
        android:textColor="@color/white"></TextView>



    </LinearLayout>